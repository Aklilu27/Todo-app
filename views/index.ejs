<%- include('partials/header') %>
    <div class="table-container">
        <h2 class="todo-title">Todo List</h2>
        <div>
            <a href="/add-todo" class="btn">add todo</a>
        </div>
        <br/>
        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
             <tr>
                <% for (let i=0; i < todos.length; i++){ %>
                <td><%= todos[i].title %></td>
                <td><%= todos[i].description %></td>
                <td><%= mymoment(todos[i].createdAt).format('YYYY-MM-DD HH:mm:ss') %></td>
                <td><%= mymoment(todos[i].updatedAt).format('YYYY-MM-DD HH:mm:ss') %></td>
                <td>
                    <a href="/update-todo" class="btn">Edit</a>
                    <a href="/delete-todo" class="btn">Delete</a>
                </td>
                    <%} %>
                     </tr>
               
        </table>
    </div>
<%- include('partials/footer') %>